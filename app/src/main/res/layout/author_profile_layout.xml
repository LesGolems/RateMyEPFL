<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/panelProfile"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/profile_slider_background"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@raw/red3">

            <TextView
                android:id="@+id/author_panel_username"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="145dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:hint="@string/anonymous"
                android:selectAllOnFocus="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/golem_badge"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_alignBottom="@id/author_panel_username"
                android:layout_toEndOf="@id/author_panel_username"
                android:src="@raw/golem_gold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/author_panel_email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_slider_background"
            android:layout_marginTop="35dp"
            android:background="@color/white"
            android:padding="10dp">

            <ImageView
                android:id="@+id/author_panel_email_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/fui_ic_googleg_color_24dp"
                android:contentDescription="@string/gmail_icon" />

            <TextView
                android:id="@+id/author_panel_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/author_panel_email_icon"
                android:layout_marginStart="50dp"
                android:textSize="25sp" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/author_panel_email"
                android:layout_marginTop="20dp"
                android:background="@color/browser_actions_bg_grey" />

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/author_panel_profile_image"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:background="@raw/blank_profile_picture"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="5dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>